<div class="container">
  <div class="row bootstrap snippets">
    <div class="col-md-9 col-sm-7">
      <h2>
        <%= link_to "#{user.username}", user_path(user.username) %>
      </h2>
    </div>
  </div>
  <div class="member-entry">
    <a href="#" class="member-img">
      <%= link_to(image_tag(user.image.url(:medium), class: "img-bordered", size: "100x100"), user_path(user.username)) %>
    </a>
    <div class="member-details">
      <div class="row info-list">
        <div class="col-sm-4">
          <i class="fa fa-heart"></i>
          <% if current_user %>
            <%= action_buttons(user)%>
          <% end %>
        </div>
        <div class="col-sm-4">
          <i class="fa fa-location-arrow"></i>
          <%= user.location %>
        </div>
        <div class="col-sm-4">
          <i class="fa fa-envelope"></i>
          <%= user.alt_email %>
        </div>
        <div class="col-sm-4">
          <i class="fa fa-birthday-cake"></i>
          <%= user.age.to_time.strftime('%B %e %Y') %>    <!-- .to_time.strftime('%B %e %Y') -->
        </div>
      </div>
    </div>
  </div>
</div>
<hr>
