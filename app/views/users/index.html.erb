<div class="btn-group" role="group" aria-label="Default Button Groups">
  <%= link_to "Everyone", users_path, class: "btn btn-default #{'active' unless params[:people]}" %>
  <%= link_to "Friends", users_path(people: "friends"), class: "btn btn-default #{'active' if params[:people] == 'friends'}" %>
  <%= link_to "Requests", users_path(people: "requests"), class: "btn btn-default #{'active' if params[:people] == 'requests'}" %>
  <%= link_to "Pending", users_path(people: "pending"), class: "btn btn-default #{'active' if params[:people] == 'pending'}" %>
</div>

<div class="container">
  <div class="row">
    <% if current_user %>
      <%= render @users %>
    <% end %>
  </div>
</div>

<% if params[:people] == 'friends' && @users.blank? %>
  <h3>Sorry, <%= current_user.username %> you have no friends.</h3>
<% end %>

<% if params[:people] == 'requests' && @users.blank? %>
  <h3>Sorry, <%= current_user.username %> you have no friend requests.</h3>
<% end %>

<% if params[:people] == 'pending' && @users.blank? %>
  <h3>Sorry, <%= current_user.username %> you have no pending friend requests.</h3>
<% end %>

