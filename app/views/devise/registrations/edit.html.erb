<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, required: true, autofocus: true %>
    <%= f.input :email, required: true, autofocus: false %>
    <%= f.input :image, as: :file %>
    <%= image_tag @user.image.url(:thumb), size: "100x100", class: "img-circle" %>
    <%= f.input :age, start_year: 1930,
                      end_year: 2008,
                      prompt: { year: "Year", day: "Day", month: "Month" },
                      order: [:day, :month, :year],
                      required: false %>

    <%#= f.text_field :age,
                     required: false,
                     autofocus: false %>
    <% if @user.age.present? %>
      <p>Your Birthday is on: <%= @user.age.strftime("%B %-d, %Y") %></p>
    <% else %>
      <p>When were you born?</p>
    <% end %>

    <%= f.input :gender, collection: ["Male", "Female", "Other"],
                         required: false,
                         autofocus: false,
                         include_blank: "Gender",
                         required: false %>

    <%= f.input :location, required: false,
                           autofocus: false,
                           placeholder: "Tell us more about you" %>

    <%= f.input :bio, required: false,
                      autofocus: false,
                      placeholder: "Write something about yourself" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
    <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
    <%= f.input :password_confirmation, required: false,
                placeholder: "Confirm your password" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
